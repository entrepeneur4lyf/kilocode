{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "if [ ! -d \"${workspaceFolder}/node_modules\" ] || [ ! -d \"${workspaceFolder}/webview-ui/node_modules\" ] || [ ! -d \"${workspaceFolder}/repo-mcp-server/node_modules\" ]; then npm run install:all; else echo \"Dependencies are already installed.\"; fi",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Local MCP Server",
			"type": "shell",
			"command": "cd ${workspaceFolder}/repo-mcp-server && npm run watch",
			"dependsOn": ["Install Dependencies"],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"group": "mcp-servers",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": {
				"owner": "mcp",
				"pattern": {
					"regexp": "^.*$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "Express server listening on port",
					"endsPattern": "âœ… MCP Translation server is ready to process requests"
				}
			},
			"isBackground": true,
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "watch",
			"dependsOn": [
				"Install Dependencies",
				"Local MCP Server",
				"npm: dev",
				"npm: watch:tsc",
				"npm: watch:esbuild"
			],
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "npm: dev",
			"type": "npm",
			"script": "dev",
			"dependsOn": ["Install Dependencies"],
			"group": "build",
			"problemMatcher": {
				"owner": "vite",
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*VITE.*",
					"endsPattern": ".*Local:.*"
				}
			},
			"isBackground": true,
			"presentation": {
				"group": "webview-ui",
				"reveal": "always"
			}
		},
		{
			"label": "npm: watch:esbuild",
			"type": "npm",
			"script": "watch:esbuild",
			"dependsOn": ["Install Dependencies"],
			"group": "build",
			"problemMatcher": {
				"owner": "esbuild",
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "\\[watch\\] build started",
					"endsPattern": "\\[watch\\] build finished"
				}
			},
			"isBackground": true,
			"presentation": {
				"group": "watch",
				"reveal": "always"
			}
		},
		{
			"label": "npm: watch:tsc",
			"type": "npm",
			"script": "watch:tsc",
			"dependsOn": ["Install Dependencies"],
			"group": "build",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"group": "watch",
				"reveal": "always"
			}
		}
	]
}
